{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "iteration": 1,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Requests per service (5m rate)",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 6},
      "targets": [
        {
          "expr": "sum by (service_name) (rate(router_requests_total[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Local vs Remote routing ratio (5m)",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 6},
      "fieldConfig": {"defaults": {"custom": {"stacking": {"mode": "normal"}}}},
      "targets": [
        {
          "expr": "sum by (route) (rate(router_requests_total[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Thread utilization per service",
      "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "avg by (service_name) (spm_thread_utilization)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active vs Max threads",
      "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum by (service_name) (spm_active_threads)", "refId": "A"},
        {"expr": "sum by (service_name) (spm_max_threads)", "refId": "B"}
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["knightmesh", "observability"],
  "templating": {
    "list": [
      {
        "name": "service_name",
        "label": "Service",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(router_requests_total, service_name)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "time": {"from": "now-6h", "to": "now"},
  "timezone": "",
  "title": "Knightmesh Observability",
  "uid": "knightmesh-observability",
  "version": 1
}
